# This is Git's per-user configuration file.
[user]
	signingkey = 8063BED0
[core]
	autocrlf = input
	fileMode = false
[alias]
	revision = rev-list --count HEAD
	hist = log --color --graph --pretty=format:'%Cred%h%Creset - %Cgreen(%cD - %cr) %C(yellow)%d%Creset %s%Creset%n          %C(bold blue)<%an> %C(white dim)gpg signature %G? %GS %GK%Creset%n' --abbrev-commit --date-order
[commit]
	gpgsign = true
[push]
	default = simple
